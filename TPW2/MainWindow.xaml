<Window x:Class="TPW2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPW2"
        mc:Ignorable="d"
        Title="Balls ( ͡° ͜ʖ ͡°)" WindowState="Maximized" ResizeMode="CanResize">
    <Canvas Name="myCanvas" Background="LightGreen" Focusable="True" MouseLeftButtonDown="AddOrRemoveItems">
        <DockPanel LastChildFill="False">
            <StackPanel Width="150" DockPanel.Dock="Top">
                <TextBox x:Name="data" Text="{Binding Ball.Amount, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </DockPanel>
    </Canvas>
</Window>
